@using PatientManagement.App.Domain.Dtos
@using PatientManagement.App.Domain.Enums
 
<MudForm @ref="form" @bind-IsValid="@success">
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h5">@(IsEdit ? $"Editar Atendimento {Model.Id}" : "Novo Atendimento")</MudText>
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Label="Código do Atendimento" @bind-Value="Model.SequenceNumber" For="@(() => Model.SequenceNumber)" Disabled="true" />
                </MudItem>
                <MudItem xs="12">
                     <MudSelect T="string" Label="PatientId" @bind-Value="Model.PatientId" For="@(() => Model.PatientId)">
                        @foreach (var patients in _patients ) { <MudSelectItem Value="@patients.Id">@patients.Name</MudSelectItem> }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudDatePicker Label="Data de Entrada" @bind-Date="Model.EntryDate" Required="true" RequiredError="Data de entrada é obrigatória." />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudSelect T="StatusCare" Label="Status" @bind-Value="Model.Status" For="@(() => Model.Status)">
                        @foreach (StatusCare status in Enum.GetValues(typeof(StatusCare))) { <MudSelectItem Value="@status">@status.ToString()</MudSelectItem> }
                    </MudSelect>
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancelar</MudButton>
            <MudButton Color="Color.Primary" Disabled="@(!success)" OnClick="Submit">Salvar</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>